<launch>
  <!-- Use simulation time -->
  <param name="/use_sim_time" value="true" />

  <!-- Move base node -->
  <node pkg="move_base" type="move_base" name="move_base" output="screen">

    <!-- Costmap configs -->
    <rosparam file="$(find me5413_world)/params/common_costmap_config.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find me5413_world)/params/common_costmap_config.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find me5413_world)/params/map_nav_params/global_costmap_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find me5413_world)/params/map_nav_params/local_costmap_params.yaml" command="load" ns="local_costmap"/>

    <!-- MPC planner config -->
    <rosparam file="$(find me5413_world)/params/mpc_planner/mpc_local_planner_params_minimum_time.yaml" command="load" />

    <!-- Set planners -->
    <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="mpc_local_planner/MpcLocalPlannerROS" />

    <!-- Planner behavior -->
    <param name="planner_frequency" value="1.0" />
    <param name="planner_patience" value="5.0" />
    <param name="controller_frequency" value="10.0" />
    <param name="controller_patience" value="15.0" />



    <!-- Remap odom if needed -->
    <remap from="odom" to="odometry/filtered" />
  </node>
</launch>

